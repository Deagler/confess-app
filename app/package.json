    "@ionic/react-router": "^5.0.0",
    "@material-ui/core": "^4.9.9",
    "@material-ui/lab": "^4.0.0-alpha.48",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.4.0",
    "@testing-library/user-event": "^8.0.3",
    "@types/jest": "^24.0.25",
    "@types/moment": "^2.13.0",
    "@types/node": "^12.12.24",
    "@types/react": "^16.9.17",
    "@types/react-dom": "^16.9.4",
    "@types/react-router": "^5.1.4",
    "@types/react-router-dom": "^5.1.3",
    "@types/url-join": "^4.0.0",
    "@types/uuid": "^7.0.2",
    "apollo-boost": "^0.4.7",
    "firebase": "^7.13.1",
    "glamor": "^2.20.40",
    "graphql": "^14.6.0",
    "immutability-helper": "^3.0.2",
    "ionicons": "^5.0.0",
    "moment": "^2.24.0",
    "react": "^16.12.0",
    "react-checkmark": "^1.1.2",
    "react-dom": "^16.12.0",
    "react-router": "^5.1.2",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.4.0",
    "typescript": "3.7.4",
    "url-join": "^4.0.1",
    "uuid": "^7.0.3"
  },
  "scripts": {
    "precommit": "lint-staged",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "tslint --project tsconfig.json",
    "generateTypes:local": "apollo client:codegen --target=typescript --endpoint=http://localhost:5001/confess-api/us-central1/graph --outputFlat src/types"
  },
  "eslintConfig": {
    "extends": "react-app",
    "rules": {
      "eqeqeq": "off",
      "no-control-regex": 0
    }
  },
  "lint-staged": {
    "*.+(js|jsx|ts|tsx)": [
      "tslint --fix"
    ],
    "*.+(json|css|html|md)": [
      "prettier --write"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@capacitor/cli": "1.5.1",
    "apollo": "^2.26.0",
    "lint-staged": "^10.0.8",
    "prettier": "^2.0.2",
    "tslint": "^6.1.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.2.0",
    "tslint-react": "^4.2.0"
  },
  "description": "Confess: A semi-anonymous social network where university students can share memes and their personal thoughts."
}
